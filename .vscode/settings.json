    // Extension: Pylint
    "pylint.args": [
        // Warnings
        "--disable=fixme", //W0511
        "--disable=logging-fstring-interpolation", //W1203

        // Convention
        "--disable=missing-final-newline", //C0304

        // Standard Checkers
        "--max-args=8",
        "--max-attributes=12",
        "--max-line-length=120",
        "--min-public-methods=1",

        // Dynamic classes
        "--generated-member==arcpy.da",
    ],

    // Extension: Python
    "python.defaultInterpreterPath": "C:\\Program Files\\ArcGIS\\Pro\\bin\\Python\\envs\\arcgispro-py3\\python.exe",
    "python.testing.pytestArgs": [
        "tests",
        // ↓↓ To be enabled only when running approval tests ↓↓
        //"--approvaltests-use-reporter='PythonNative'",
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
}